---
import Section from "./Section.astro";
import type { SkillsProps } from "@types";

interface Props {
  skills: SkillsProps;
}

const { skills } = Astro.props;
---

<Section text={skills.title} href="skills">
  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-4">
    {
      skills.data.map(({ category, skills }) => (
        <div class="flex flex-col gap-4">
          <h3 class="font-sans text-base font-bold uppercase tracking-wide text-[var(--text-heading)]">
            {category}
          </h3>
          <ul class="flex flex-col gap-2">
            {skills.map((skill) => (
              <li class="font-sans text-[var(--text-muted)] hover:text-[var(--text-heading)] transition-colors duration-300">
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Section>
