---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="py-20 md:py-32" id="#hero">
  <div class="flex flex-col gap-8 animate-slide-in animation-delay-300">
    <h1 class="flex items-center gap-4 font-sans text-5xl font-light text-[var(--text-heading)] sm:text-6xl md:text-7xl transition-colors duration-300">
      Hello! <img src="https://em-content.zobj.net/source/apple/391/waving-hand_1f44b.png" alt="Waving Hand" width="60" height="60" />
    </h1>
    
    <p class="font-sans text-3xl font-light leading-relaxed text-[var(--text-body)] sm:text-4xl sm:leading-relaxed md:text-5xl md:leading-tight transition-colors duration-300">
      I'm <span class="font-bold text-[var(--text-heading)]">{name}</span>, a {specialty} at UofT who {summary} <img src="https://em-content.zobj.net/source/apple/391/rocket_1f680.png" alt="Rocket" class="inline-block w-8 h-8 md:w-10 md:h-10 align-text-bottom" />
    </p>

    <div class="mt-4 flex items-center gap-2 text-lg sm:text-xl">
      <span class="text-[var(--text-muted)] flex items-center gap-2">Get in touch <img src="https://em-content.zobj.net/source/apple/391/backhand-index-pointing-right_1f449.png" alt="Pointing Right" class="w-6 h-6" /></span>
      <a
        class="link-highlight font-medium text-[var(--text-heading)]"
        href={`mailto:${email}`}
      >
        {email}
      </a>
    </div>
  </div>
</section>
